<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.alice</groupId>
    <artifactId>parent</artifactId>
    <version>8.0.0-SNAPSHOT</version>
  </parent>

  <name>Alice IDE</name>
  <artifactId>alice-ide</artifactId>
  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>org.alice</groupId>
      <artifactId>ide</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.gdata</groupId>
      <artifactId>core</artifactId>
      <version>1.47.1</version>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>includeSims</id>
      <activation>
        <property>
          <name>includeSims</name>
          <value>!false</value>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.alice.nonfree</groupId>
          <artifactId>ide-nonfree</artifactId>
        </dependency>
      </dependencies>
    </profile>

    <!-- Use profiles to detect the os, so that the correct javafx native library can be loaded -->
    <profile>
      <id>os-windows</id>
      <activation>
        <os>
          <family>windows</family>
        </os>
      </activation>
      <properties>
        <javafx.os>win</javafx.os>
      </properties>
    </profile>
    <profile>
      <id>os-linux</id>
      <activation>
        <os>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <javafx.os>linux</javafx.os>
      </properties>
    </profile>
    <profile>
      <id>os-mac</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <javafx.os>mac</javafx.os>
      </properties>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.10</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/lib</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>alice-ide</id>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>--module-path</argument>
            <argument>target/lib/javafx-base-${javafx.version}.jar:target/lib/javafx-base-${javafx.version}-${javafx.os}.jar:target/lib/javafx-graphics-${javafx.version}.jar:target/lib/javafx-graphics-${javafx.version}-${javafx.os}.jar:target/lib/javafx-media-${javafx.version}.jar:target/lib/javafx-media-${javafx.version}-${javafx.os}.jar</argument>
            <argument>--add-modules</argument>
            <argument>javafx.media</argument>
            <argument>-classpath</argument>
            <classpath />
            <argument>-Xmx1024m</argument>
            <argument>-Dswing.aatext=true</argument>
            <argument>-Dcom.apple.mrj.application.apple.menu.about.name=Alice3</argument>
            <argument>-Dedu.cmu.cs.dennisc.java.util.logging.Logger.Level=WARNING</argument>
            <argument>-Dorg.alice.ide.internalTesting=true</argument>
            <argument>-Dorg.lgna.croquet.Element.isIdCheckDesired=true</argument>
            <argument>-Djogamp.gluegen.UseTempJarCache=false</argument>
            <argument>-Dorg.alice.stageide.isCrashDetectionDesired=false</argument>
            <argument>-Dsun.java2d.cmm=sun.java2d.cmm.kcms.KcmsServiceProvider</argument>
            <argument>--add-opens=java.desktop/sun.awt=ALL-UNNAMED</argument>
            <argument>--add-opens=java.base/java.io=ALL-UNNAMED</argument>
            <argument>--add-opens=java.base/java.time=ALL-UNNAMED</argument>
            <argument>--add-opens=javafx.graphics/com.sun.javafx.application=ALL-UNNAMED</argument>
            <argument>-Dorg.alice.ide.rootDirectory=../core/resources/target/distribution</argument>
            <argument>
              org.alice.stageide.EntryPoint
            </argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
